<%- include layouts/header.ejs %>

        <div class="page-data">

            <form method="post" action="/reviews/edit/<%=data[0].id%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Name</td><td>: <input type="text" name="name" value="<%=data[0].name%>" required></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Post</td>
                    <td valign="top">:
                        <textarea name="post" required cols="30" rows="5"><%=data[0].post%></textarea>
                    </td>
                </tr>
                <tr>
                    <td class="label">Star</td><td>: <input type="number" value="<%=data[0].star%>" name="star" required></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>

        </div>

<%- include layouts/footer.ejs %>
